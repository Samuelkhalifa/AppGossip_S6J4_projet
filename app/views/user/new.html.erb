<body>
    <div class="header"></div>
            <div class="title">
                <h1>The Gossip Project</h1>
                <div>
                    <h6>><a href="/">Home Page</h6></a>
                </div>
            </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">Create your account</a>
            </div>
        </nav>
    </div>

    <div class="main">
        <div class="page content col-7">
            <%= form_tag url_for(action: 'create'), method: "post" do %>
                <%= label_tag 'First name' %>
                <%= text_field_tag 'first_name', @user.first_name %>
    
                <%= label_tag 'Last name' %>
                <%= text_field_tag 'last_name', @user.last_name %>
    
                <%= label_tag 'Age' %>
                <%= text_field_tag 'age', @user.age %>
    
                <%= label_tag 'City' %>
                <%= text_field_tag 'city', @user.city %>
              
                <%= label_tag 'Description' %>
                <%= text_area_tag 'description', @user.description %>
    
                <%= label_tag 'Email' %>
                <%= text_field_tag 'email', @user.email %>
    
                <%= label_tag 'Password' %>
                <%= text_field_tag 'password_digest', @user.password_digest %>
              
                <%= submit_tag 'Create account' %>
            <% end %>
        </div>
    </div>
</body>
